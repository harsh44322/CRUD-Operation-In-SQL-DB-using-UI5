<mvc:View controllerName="postgresql.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:tab="sap.ui.table"
    xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <content>
            <tab:Table rows="{/data}">
                <tab:columns>
                    <tab:Column>
                        <Label text="Id"/>
                        <tab:template>
                            <Text text="{id}"/>
                        </tab:template>
                    </tab:Column>
                    <tab:Column>
                        <Label text="First Name"/> 
                        <tab:template>
                            <Text text="{first_name}"/>
                        </tab:template>
                    </tab:Column>
                    <tab:Column>
                        <Label text="Last Name"/>
                        <tab:template>
                            <Text text="{last_name}"/>
                        </tab:template>
                    </tab:Column>
                    <tab:Column>
                        <Label text="Email"/>
                        <tab:template>
                            <Text text="{email}"/>
                        </tab:template>
                    </tab:Column>
                    <tab:Column>
                        <Label text="Hiring Date"/>
                        <tab:template>
                            <Text text="{hire_date}"/>
                        </tab:template>
                    </tab:Column>
                    <tab:Column>
                        <Label text="Salary"/>
                        <tab:template>
                            <Text text="{salary}"/>
                        </tab:template>
                    </tab:Column>
                </tab:columns>
            </tab:Table>
        </content>
    </Page>
</mvc:View>
